@model EventManagementPortal.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}


<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Register</h2>
                <p class="mb-0">Create a new account to organize events</p>
            </div>
            <div class="card-body">
                <!-- 
                    asp-action: specifies which controller action to submit to
                    asp-controller: specifies which controller
                    method="post": submits as HTTP POST
                -->
                <form asp-action="Register" asp-controller="Account" method="post">
                    <!-- 
                        Anti-forgery token: prevents CSRF attacks
                        Automatically generated and validated
                    -->
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Full Name Field -->
                    <div class="form-group mb-3">
                        <!-- 
                            asp-for: binds to model property
                            Generates id, name, and validation attributes automatically
                        -->
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                        <!-- 
                            Shows validation error messages for this field
                            Displays messages from [Required], [StringLength], etc.
                        -->
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Email Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Enter password (min 6 characters)" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Password must contain: uppercase, lowercase, digit, and special character
                        </small>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-user-plus"></i> Register
                        </button>
                    </div>

                    <!-- Link to Login -->
                    <div class="text-center">
                        <p>Already have an account? 
                            <a asp-action="Login" asp-controller="Account">Login here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- 
        Include client-side validation scripts
        Validates form before submission (better UX)
        Still validates on server for security
    -->
    <partial name="_ValidationScriptsPartial" />
}