@model EventManagementPortal.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h4>Event Details</h4>
                    <hr />
                    <p><strong>Date:</strong> @Model.EventDate.ToString("dddd, MMMM dd, yyyy")</p>
                    <p><strong>Time:</strong> @Model.EventDate.ToString("hh:mm tt")</p>
                    <p><strong>Location:</strong> @Model.Location</p>
                    <p><strong>Organiser:</strong> @Model.CreatedBy.FullName</p>
                    <h5 class="mt-4">Description</h5>
                    <p>@Model.Description</p>
                </div>
                <div class="col-md-4">
                    <h5>Registered Guests</h5>
                    <hr />
                    @if (Model.Guests != null && Model.Guests.Count > 0)
                    {
                        <p class="badge bg-success">@Model.Guests.Count Guest(s)</p>
                        <ul class="list-group">
                            @foreach (var guest in Model.Guests)
                            {
                                <li class="list-group-item">
                                    <strong>@guest.FullName</strong><br />
                                    <small>@guest.Email</small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No guests registered yet.</p>
                    }
                    
                    <div class="mt-3">
                        <p><strong>Guest Registration Link:</strong></p>
                        <input type="text" class="form-control" readonly 
                               value="@Url.Action("RegisterGuest", "Public", new { eventId = Model.Id }, protocol: Context.Request.Scheme)" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline float-end"
                  onsubmit="return confirm('Delete this event?');">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>