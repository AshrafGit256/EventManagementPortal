@model List<EventManagementPortal.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="fas fa-calendar"></i> My Events
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Create New Event
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <div class="row">
                    @foreach (var ev in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">@ev.Title</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong><i class="fas fa-calendar-alt"></i> Date:</strong> @ev.EventDate.ToString("dddd, MMMM dd, yyyy")</p>
                                    <p><strong><i class="fas fa-clock"></i> Time:</strong> @ev.EventDate.ToString("hh:mm tt")</p>
                                    <p><strong><i class="fas fa-map-marker-alt"></i> Location:</strong> @ev.Location</p>
                                    <p class="card-text">@(ev.Description.Length > 100 ? ev.Description.Substring(0, 100) + "..." : ev.Description)</p>
                                </div>
                                <div class="card-footer bg-light">
                                    <a asp-action="Details" asp-route-id="@ev.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@ev.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@ev.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this event?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> You haven't created any events yet. Click "Create New Event" to get started!
                </div>
            }
        </div>
    </div>
</div>