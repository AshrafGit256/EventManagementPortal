@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5>Total Events</h5>
                    <h2>@ViewBag.TotalEvents</h2>
                </div>
                <div class="card-footer">
                    <a asp-action="AllEvents" class="text-white">View All Events</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5>Total Organisers</h5>
                    <h2>@ViewBag.TotalOrganisers</h2>
                </div>
                <div class="card-footer">
                    <a asp-action="ManageOrganisers" class="text-white">Manage Organisers</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5>Total Guests</h5>
                    <h2>@ViewBag.TotalGuests</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5>Quick Actions</h5>
        </div>
        <div class="card-body">
            <a asp-action="CreateOrganiser" class="btn btn-primary">Create New Organiser</a>
            <a asp-action="AllEvents" class="btn btn-info">View All Events</a>
            <a asp-action="ManageOrganisers" class="btn btn-success">Manage Organisers</a>
        </div>
    </div>
</div>