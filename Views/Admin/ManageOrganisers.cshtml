@model List<EventManagementPortal.ViewModels.OrganiserViewModel>

@{
    ViewData["Title"] = "Manage Organisers";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="fas fa-users-cog"></i> Manage Organisers
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="CreateOrganiser" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Create New Organiser
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Created At</th>
                                <th>Event Count</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var organiser in Model)
                            {
                                <tr>
                                    <td>@organiser.FullName</td>
                                    <td>@organiser.Email</td>
                                    <td>@organiser.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge bg-primary">@organiser.EventCount events</span></td>
                                    <td>
                                        <form asp-action="DeleteOrganiser" method="post" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this organiser? All their events will also be deleted.');">
                                            <input type="hidden" name="id" value="@organiser.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No organisers found. Create your first organiser to get started.
                </div>
            }
        </div>
    </div>
</div>