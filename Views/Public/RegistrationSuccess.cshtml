@{
    ViewData["Title"] = "Registration Successful";
    var eventDetails = ViewBag.Event as EventManagementPortal.Models.Event;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-check-circle fa-3x mb-3"></i>
                        <br />
                        Registration Successful!
                    </h2>
                </div>
                <div class="card-body text-center">
                    <h4>Thank you for registering!</h4>
                    <p class="lead">Your registration for <strong>@eventDetails.Title</strong> has been confirmed.</p>
                    
                    <div class="alert alert-info mt-4">
                        <p><strong>Event Details:</strong></p>
                        <p><i class="fas fa-calendar"></i> @eventDetails.EventDate.ToString("dddd, MMMM dd, yyyy")</p>
                        <p><i class="fas fa-clock"></i> @eventDetails.EventDate.ToString("hh:mm tt")</p>
                        <p><i class="fas fa-map-marker-alt"></i> @eventDetails.Location</p>
                    </div>

                    <p class="mt-4">
                        <strong>Confirmation Number:</strong> <span class="badge bg-primary">#@ViewBag.GuestId</span>
                    </p>

                    <p class="text-muted mt-3">
                        You will receive a confirmation email shortly with more details.
                    </p>

                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>