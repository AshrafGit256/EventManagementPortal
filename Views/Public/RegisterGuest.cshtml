@model EventManagementPortal.DTOs.GuestRegistrationDTO

@{
    ViewData["Title"] = "Guest Registration";
    var eventDetails = ViewBag.Event as EventManagementPortal.Models.Event;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Event Information Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-calendar-alt"></i> Event Information</h3>
                </div>
                <div class="card-body">
                    <h4>@eventDetails.Title</h4>
                    <p><strong><i class="fas fa-calendar"></i> Date:</strong> @eventDetails.EventDate.ToString("dddd, MMMM dd, yyyy")</p>
                    <p><strong><i class="fas fa-clock"></i> Time:</strong> @eventDetails.EventDate.ToString("hh:mm tt")</p>
                    <p><strong><i class="fas fa-map-marker-alt"></i> Location:</strong> @eventDetails.Location</p>
                    <p><strong><i class="fas fa-user"></i> Organiser:</strong> @eventDetails.CreatedBy.FullName</p>
                    <p class="mt-3">@eventDetails.Description</p>
                </div>
            </div>

            <!-- Registration Form Card -->
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="fas fa-user-plus"></i> Register for this Event</h3>
                </div>
                <div class="card-body">
                    <form asp-action="RegisterGuest" method="post">
                        <input type="hidden" asp-for="EventId" value="@eventDetails.Id" />
                        
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label">
                                <i class="fas fa-user"></i> Full Name
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter your full name" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email Address
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="fas fa-phone"></i> Phone Number
                            </label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" required />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="agreeTerms" required />
                                <label class="form-check-label" for="agreeTerms">
                                    I agree to receive event updates and confirmations
                                </label>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle"></i> Register Now
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}